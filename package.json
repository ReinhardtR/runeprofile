{
  "name": "runeprofile",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev dev:api-client --filter=!admin",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:setup": "turbo run dev:setup --ui=stream",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:modules": "rm -rf node_modules && pnpm -r exec rm -rf node_modules",
    "clean:wrangler": "pnpm -r exec rm -rf .wrangler",
    "script:check-clog": "pnpm --filter ts-scripts run check-clog"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "prettier": "^3.5.2",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "importOrder": [
      "^@runeprofile/(.*)$",
      "~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
