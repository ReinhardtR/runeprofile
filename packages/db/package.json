{
  "name": "@runeprofile/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:apply:remote": "wrangler d1 migrations apply runeprofile-db --remote --cwd ../../apps/api",
    "db:apply": "tsx scripts/d1-apply-all.ts",
    "db:seed": "tsx scripts/d1-seed-all.ts"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "dependencies": {
    "@runeprofile/runescape": "workspace:*",
    "drizzle-orm": "^0.40.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "@types/node": "^20.14.11",
    "drizzle-kit": "^0.30.5",
    "typescript": "^5.8.2",
    "wrangler": "^4.10.0",
    "tsx": "^4.19.2"
  }
}
